<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llBottomConatainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_animation_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvLendMoney"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_8"
        android:layout_marginHorizontal="@dimen/dp_45"
        android:text="Lend Money"
        android:textAlignment="center"
        android:textSize="@dimen/dp_17"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/recovery_money_button"/>

    <TextView
        android:id="@+id/tvRecoverMoney"
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLendMoney"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_8"
        android:text="Recover Money"
        android:textAlignment="center"
        android:textSize="@dimen/dp_17"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/lend_money_button"/>


    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/close_button_bg"
        android:gravity="center"
        android:padding="@dimen/dp_5"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintBottom_toBottomOf="@id/llBottomConatainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@+id/tvRecoverMoney" />

    <FrameLayout
        android:id="@+id/topSheetContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>